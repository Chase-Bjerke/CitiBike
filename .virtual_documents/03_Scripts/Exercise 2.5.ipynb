





import pandas as pd
import os
from keplergl import KeplerGl
from pyproj import CRS
import numpy as np
from matplotlib import pyplot as plt


# Import merged csv
ny_data_merged_v2 = pd.read_csv("../02_Data/Prepared_Data/ny_data_merged_v2.csv")





ny_data_merged_v2.shape


ny_data_merged_v2.columns


ny_data_merged_v2.head()


ny_data_merged_v2.dtypes





# Add a constant column
ny_data_merged_v2['value'] = 1

# Aggregate trips between stations
df_station_trips = (
    ny_data_merged_v2
    .groupby(['start_station_name', 'end_station_name'], as_index=False)
    .size()
    .rename(columns={'size': 'trip_count'})
)





df_station_trips.shape


df_station_trips.head()





# Export station to station trips to csv

df_station_trips.to_csv(
    r"..\02_Data\Prepared_Data\station_to_station_trips.csv",
    index=False
)





# Basic info on the new subset

stats = df_station_trips['trip_count'].describe()

print(f"Count: {stats['count']:,.0f}")
print(f"Mean: {stats['mean']:,.2f}")
print(f"Std Dev: {stats['std']:,.2f}")
print(f"Min: {stats['min']:,.0f}")
print(f"25%: {stats['25%']:,.0f}")
print(f"50% (Median): {stats['50%']:,.0f}")
print(f"75%: {stats['75%']:,.0f}")
print(f"Max: {stats['max']:,.0f}")


top20 = df_station_trips.sort_values('trip_count', ascending=False).head(20)

plt.figure(figsize=(12,8))
plt.barh(
    top20['start_station_name'] + " → " + top20['end_station_name'],
    top20['trip_count'],
    color='darkorange'
)
plt.title("Top 20 Station-to-Station Flows")
plt.xlabel("Trip Count")
plt.gca().invert_yaxis()
plt.grid(alpha=0.3)
plt.show()


max_val = df_station_trips['trip_count'].max()

plt.figure(figsize=(10,6))
plt.hist(df_station_trips['trip_count'], bins=200, color='steelblue')
plt.xlim(0, max_val + 500)   # extend slightly past the max
plt.title("Distribution of Trip Counts per Station Pair")
plt.xlabel("Trip Count")
plt.ylabel("Frequency")
plt.grid(alpha=0.3)
plt.show()


# Focused Histogram (MAX= 6,000)
 
plt.figure(figsize=(10,6))
plt.hist(df_station_trips['trip_count'], bins=200, color='steelblue')
plt.xlim(0, 6000)
plt.title("Distribution of Trip Counts per Station Pair (0–6000 Range)")
plt.xlabel("Trip Count")
plt.ylabel("Frequency")
plt.grid(alpha=0.3)
plt.show()


# Focused Box Plot (MAX= 6,000)

plt.figure(figsize=(12,4))
plt.boxplot(df_station_trips['trip_count'], vert=False)
plt.xlim(0, 6000)
plt.title("Box Plot of Trip Counts per Station Pair (0–6000 Range)")
plt.xlabel("Trip Count")
plt.grid(alpha=0.3)
plt.show()





# Map 1
map_1 = KeplerGl(height=600)


# Add data to the map
map_1.add_data(data=df_station_trips, name="Station Trips")


map_1





df_kepler = (
    ny_data_merged_v2
    .groupby(
        [
            'start_station_name',
            'end_station_name',
            'start_lat',
            'start_lng',
            'end_lat',
            'end_lng'
        ],
        as_index=False
    )
    .size()
    .rename(columns={'size': 'trip_count'})
)


df_kepler.head()





# Export csv for online mapping

df_kepler.to_csv(
    r"..\02_Data\Prepared_Data\station_to_station_kepler.csv",
    index=False
)



